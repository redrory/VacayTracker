<!DOCTYPE html>
<html>
  <head>
    <title><%= @title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets'%>
    
    <%= javascript_include_tag "application", "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js" %>

    <%= stylesheet_link_tag "application", "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/redmond/jquery-ui.css" %>
    
	
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header'%>
	<% if signed_in? %>
		<%= render 'layouts/logHeader'%>
	<% end %>
      <section class="round">
		<% flash.each do |key, value| %>
		          <div class="flash <%= key %>"><%= value %></div>
		        <% end %>
        <%= yield %>
      </section>
		<%= render 'layouts/footer'%>
    </div>
  </body>
</html>